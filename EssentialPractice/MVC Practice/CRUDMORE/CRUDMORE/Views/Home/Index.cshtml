
@{
    Layout = null;
}

<!DOCTYPE html>
@using(Html.BeginForm())
{
    <table border="1">
        <thead>
            <tr>
                <th>UserName</th>
                <th>City</th>
                <th>Gender</th>
                <th>Hobby1</th>
                <th>Hobby2</th>
                <th>Hobby3</th>
                <th>Edit
                </th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in ViewBag.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td> @CRUDMORE.Models.U.GetCityNameByCityId(user.CityId)</td>
                    <td>@CRUDMORE.Models.U.GetGender(user.Gender)</td>
                    <td> @user.Hobby1</td>
                    <td> @user.Hobby2</td>
                    <td>@user.Hobby3</td>
                    <td><a href="/Home/Edit/@user.UserId">Edit</a></td>
                    <td>@Html.ActionLink("Delete","Delete",new{id=@user.UserId})</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add","Add","Home")
}
